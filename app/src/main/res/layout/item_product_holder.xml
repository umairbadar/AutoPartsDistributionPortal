<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Holder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_supplier_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supplier Name"/>

            <TextView
                android:id="@+id/tv_supplier_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supplier Type"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"/>

            <TextView
                android:id="@+id/tv_cell_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cell Phone"/>

            <TextView
                android:id="@+id/tv_nic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIC/NTN Number"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status" />

            <LinearLayout
                android:id="@+id/layout_view_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#1a9a55"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_eye"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="#1a9a55"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_edit"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>